{
    "name": "starlit/utils",
    "type": "library",
    "description": "A collection of useful utilities.",
    "keywords": ["util", "utils", "utilities", "validator", "validation"],
    "homepage": "http://github.com/starweb/starlit-utils",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Starweb AB"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "symfony/translation": "^3.0"
    },
    "autoload": {
      "psr-4": {"Starlit\\Utils\\": "src"}
    },
    "suggest": {
    	"symfony/translation": "Allow translation of validator error messages"
    }
}